root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
# Markdown: trailing spaces are significant (line breaks), so don't trim
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4

[*.json]
indent_style = space
indent_size = 2
